# IMAGEN MODELO
FROM eclipse-temurin:22-jdk

# INFORMAR EL PUERTO DONDE FUNCIONA LA APP (INFORMATIVO)
EXPOSE 8080

# DEFINIR DIRECTORIO RAIZ DEL CONTENEDOR
WORKDIR /root

# COPIAR Y PEGAR ARCHIVOS AL CONTENEDOR
COPY ./pom.xml /root
COPY ./.mvn /root/.mvn
COPY ./mvnw /root

# DESCARGAR LAS DEPENDENCIAS EN CONTENEDOR
RUN chmod +x mvnw
RUN ./mvnw dependency:go-offline

# COPIAR CODIGO FUENTE EN CONTENEDOR
COPY ./src /root/src

# CONSTRUIR NUESTRA APLICACION
RUN ./mvnw clean install -DskipTests

# LEVANTAR NUESTRA APLICACION CUANDO EL CONTENEDOR INICIE
ENTRYPOINT ["java", "-jar", "/root/target/estudiante-0.0.1-SNAPSHOT.jar"]